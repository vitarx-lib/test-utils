{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": [
      "node",
      "vitarx"
    ],
    "jsx": "react",
    "jsxImportSource": "vitarx"
  },
  "include": [
    "src",
    "tests"
  ]
}
